

<h1>CREATE  BOOKING</h1>
<%= form_with(model:@booking,local:true) do |f| %>


	<p>	
		<%= f.label :start_date %> </br>
		<%= f.datetime_field :start_date %>

	</p>

	<p>
		<%= f.label :end_date %> </br>
		<%= f.datetime_field :end_date %>
	</p>
	<p>
		<%= f.label :price %> </br>
		<%= f.number_field :price %>
	</p>

		<p>
		<%= f.label :property %> </br>
		<%= f.select :property_id,Property.all.pluck(:name,:id) %>
	</p>

	<p>
		<%= f.submit %>
	</p>

<% end %>