<h1>PROPERTIES</h1>
<table>
	<thead>
		<tr>
			<th>Name</th>
			<th>Address</th>
		</tr>
	</thead>
	
	<tbody>
		<% @properties.each do |property|%>
		<tr>
			<td><%=property.name%></td>
			<td><%=property.address%></td>
			<td><%= link_to 'Show',property_path(property.id)%></td>
			<td><%= link_to 'Edit',edit_property_path(property.id)%></td>
			<td><%= link_to 'Delete',property_path(property.id),data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }%></td>


		</tr>
		
		<%end%>


	</tbody>

</table>

